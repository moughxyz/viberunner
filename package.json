{
  "name": "viberunner-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach run clean",
    "build": "yarn workspaces foreach run build",
    "dev": "yarn workspaces foreach run dev",
    "lint": "yarn workspaces foreach run lint",
    "make": "yarn workspace viberunner run make",
    "release": "yarn workspace viberunner run release"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=4.0.0"
  }
}

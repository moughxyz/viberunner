---
import '../styles/index.css'
import '../styles/about.css'
import Layout from '../components/Layout.astro'
import AboutContent from '../components/AboutContent'
import { product } from '@viberunner/common'
---

<Layout
	title={`About Us - ${product.productName}`}
	description={`Learn about ${product.productName}'s mission to democratize desktop app development and empower users to build their own personal utilities.`}
	currentPage="about"
>
	<main class="about-container">
		<AboutContent client:load />
	</main>
</Layout>
---
import '../styles/index.css'
import '../styles/about.css'
import Navigation from '../components/Navigation'
import AboutContent from '../components/AboutContent'
import Footer from '../components/Footer'
import { product } from '@viberunner/common'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>About Us - {product.productName}</title>
		<meta name="description" content={`Learn about ${product.productName}'s mission to democratize desktop app development and empower users to build their own personal utilities.`} />
	</head>
	<body>
		<Navigation currentPage="about" client:load />

		<main class="about-container">
			<AboutContent client:load />
		</main>

		<Footer client:load />
	</body>
</html>
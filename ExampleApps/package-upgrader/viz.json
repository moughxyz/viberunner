{
  "name": "Package Upgrader",
  "description": "Analyze and upgrade package.json dependencies to their latest versions",
  "version": "1.0.0",
  "author": "Viberunner",

  "matchers": [
    {
      "type": "filename",
      "pattern": "package.json",
      "priority": 100
    },
    {
      "type": "filename",
      "pattern": "package-lock.json",
      "priority": 90
    },
    {
      "type": "content-json",
      "requiredProperties": ["dependencies"],
      "priority": 80
    },
    {
      "type": "content-json",
      "requiredProperties": ["devDependencies"],
      "priority": 75
    },
    {
      "type": "combined",
      "priority": 95,
      "operator": "AND",
      "conditions": [
        {
          "type": "mimetype",
          "mimetype": "application/json",
          "priority": 50
        },
        {
          "type": "content-regex",
          "regex": "\"(dependencies|devDependencies)\"\\s*:",
          "priority": 50
        }
      ]
    }
  ],

  "mimetypes": ["application/json"]
}